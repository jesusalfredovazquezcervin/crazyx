<div class="container">
  <div class="row justify-content-center">
    <div class="col-lg-5 text-center mx-auto">
      <h1 class="text-white mb-2 mt-5">&nbsp;</h1>
      <p class="text-lead text-white">&nbsp;</p>
      <p class="text-lead text-white">&nbsp;</p>
    </div>
  </div>
</div>
<div class="container">
  <div class="row mt-lg-n10 mt-md-n11 mt-n10 justify-content-center">
    <div class="col-xl-4 col-lg-5 col-md-7 mx-auto">
      <div class="card mt-5">
        <div class="card-header pb-0 text-start">
          <h3 class="font-weight-bolder">Reset password</h3>
          <p class="mb-0">Forgot your password?</p>
        </div>
        <div class="card-body">
          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
            
            <%= f.label :email %><br />
            <div class="mb-3">
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Email" %>
            </div>                                                    
            <div class="text-center">
              <%= f.submit "Send me reset password instructions", class: "btn btn-primary w-100 mt-4 mb-0" %>
            </div>          
          <%end%>
        </div>
        <div class="card-footer text-center pt-0 px-lg-2 px-1">
          <p class="mb-4 text-sm mx-auto">
            <%= render "devise/shared/links" %>  
          </p>
          
        </div>
      </div>
    </div>
  </div>
</div>
