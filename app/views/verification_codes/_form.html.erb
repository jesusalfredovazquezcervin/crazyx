<!-- Modal -->
<div class="card card-plain">
  <div class="card-header pb-0 text-left">  
  <% unless notice.nil? %>
    <div class="alert alert-success alert-dismissible fade show" role="alert" style= "color:white" >
      <strong>
        <%= notice %>
        <%= alert %>
      </strong>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
      </button>
    </div>      
  <% end %>
    <h3 class="font-weight-bolder text-danger text-gradient">Quit Event</h3>
    <p class="mb-0"> <%=verification_code.player.name.titleize%>, we've sent you a verification code to the cellphone end with ***<%=verification_code.player.cellphone[-4..-1]%></p>
  </div>
  <div class="card-body">
    
    <%= form_with(model: verification_code) do |f| %>
      <% if verification_code.errors.any? %>
        <div style="color: red">
          <h2><%= pluralize(verification_code.errors.count, "error") %> prohibited this event from being saved:</h2>

          <ul>
            <% verification_code.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <label>Verification code</label>
      <div class="input-group mb-3">
        <%= f.number_field :code, class: "form-control", value: ""  %>
      </div>
      <div class="input-group mb-3">
        <%= f.hidden_field :event_id, class: "form-control"  %>
      </div>
          
      <div class="text-center">
        <%= button_tag(type: 'submit', class:"btn btn-round bg-gradient-danger btn-lg w-100 mt-4 mb-0") do %>
          <i class="fa fa-database"></i> Confirm Quit
      <% end %>
      </div>

    <% end %>
      
    
  </div>
  <div class="card-footer text-center pt-0 px-lg-2 px-1">
    <p class="mb-4 text-sm mx-auto">
      Did'nt receive a code?
      <a href="javascript:;" class="text-info text-gradient font-weight-bold">Resend new code</a>
    </p>
  </div>
  <div class="modal-footer">
    <button type="button" class="btn bg-gradient-secondary" data-bs-dismiss="modal">Close</button>        
  </div>
</div>

